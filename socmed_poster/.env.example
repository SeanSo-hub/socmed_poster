# Social Media Poster Configuration
# Copy this file to .env and fill in your actual API credentials
# Never commit the .env file to version control!

# Facebook API credentials
# Get these from https://developers.facebook.com/
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Instagram API credentials  
# Get these from Facebook Developer Console (Instagram Basic Display API)
INSTAGRAM_USER_ID=your_instagram_user_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Twitter API credentials
# Get these from https://developer.twitter.com/
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET_TOKEN=your_twitter_access_secret_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET_KEY=your_twitter_api_secret_key

# LinkedIn API credentials
# Get these from https://developer.linkedin.com/
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_PERSON_ID=your_linkedin_person_id

# Cloudinary credentials for image hosting (optional)
# Get these from https://cloudinary.com/
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Application settings (optional)
# UPLOAD_FOLDER=uploads
# MAX_CONTENT_LENGTH=16777216  # 16MB max file size